<?php    

    header('Content-Type: text/html; charset=utf-8');

    $host   = '127.0.0.1';
    $user   = 'root';
    $senha  = '';
    $banco  = 'teste';

    $ct     = mysqli_connect($host, $user, $senha, $banco);

    if (mysqli_connect_errno($ct)){
        echo "</br></br>Problemas com a conexao. Verifique os dados !";
        die();
    }

    
    //Salva a foto
       
    $insert = "INSERT INTO teste VALUES ('$_FILES[cadFotoUsuario]')";    
    
    if (mysqli_query($ct, $insert)) {
        echo "Foto salva com sucesso !";
    } else {
        echo "Error: Não foi possível realizar a operação </br> Houve algum problema com os dados da solicitação(em MySQLI_QUERY)";
    }


    //Busa e exibe a foto    

    $busca = "SELECT * FROM teste";
    
    $fotos = mysqli_query($ct, $busca);

    while($foto = mysqli_fetch_assoc($fotos)) { 
	    echo $foto; 
    } 


?>
